<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.WelcomeActivity">

    <com.liningkang.ui.view.button.BottomButton
        android:id="@+id/nextText"
        android:layout_width="match_parent"
        app:buttonText="@string/start"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="@dimen/dp_279"
            android:layout_height="@dimen/dp_228"
            android:layout_marginTop="@dimen/dp_115"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_welcome" />

        <com.liningkang.ui.view.BoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_54"
            android:gravity="center"
            android:text="@string/welcome"
            android:textColor="@color/_2d3548"
            android:textSize="@dimen/sp_29"
            app:isBold="true" />

        <com.liningkang.ui.view.BoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="center"
            android:text="@string/welcom_hint"
            android:textColor="@color/_2d3548"
            android:textSize="@dimen/sp_17" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>