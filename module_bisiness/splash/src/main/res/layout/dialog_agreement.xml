<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_32"
    android:background="@drawable/white_bg_round_10"
    android:paddingBottom="@dimen/dp_26">
    <com.liningkang.ui.view.BoldTextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:text="@string/agreement_title"
        android:textColor="@color/_333333"
        android:textSize="@dimen/sp_18"
        app:isBold="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_17"
        android:id="@+id/textLayout1"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        >
        <com.liningkang.ui.view.BoldTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/agreement_hint"
            android:textColor="@color/_333333"
            android:textSize="@dimen/sp_14"
            />


    </RelativeLayout>


    <com.liningkang.ui.view.BoldTextView
        android:id="@+id/watchNowText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textLayout1"
        android:text="@string/see_now"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/_7b58ff"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_13"
        />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        app:layout_constraintTop_toBottomOf="@+id/watchNowText">

        <com.liningkang.ui.view.BoldTextView
            android:id="@+id/disagreeButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_weight="1"
            android:background="@drawable/view_gray_round_10_bg"
            android:gravity="center"
            android:text="@string/disagree"
            android:textColor="@color/_7b58ff"
            android:textSize="@dimen/sp_18"
            app:isBold="true" />

        <com.liningkang.ui.view.BoldTextView
            android:id="@+id/consentButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_44"
            android:layout_weight="1"
            android:background="@drawable/view_blue_round_10_bg"
            android:gravity="center"
            android:text="@string/consent"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            app:isBold="true"
            app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>