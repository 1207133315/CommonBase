<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.liningkang.ui.view.ShadowViewCard
        android:id="@+id/shadowView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shadowRound="@dimen/dp_20"
        >

        <RelativeLayout
            android:id="@+id/cardView"
            android:paddingVertical="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iconView"
                android:layout_width="@dimen/dp_63"
                android:layout_height="@dimen/dp_66"
                android:layout_marginLeft="@dimen/dp_15" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_76"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/arrowsView"
                android:layout_toRightOf="@+id/iconView"
                android:orientation="vertical">

                <com.liningkang.ui.view.BoldTextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="健康管理"
                    android:textColor="#1b3043"
                    android:textSize="@dimen/sp_18"
                    app:isBold="true" />

                <TextView
                    android:id="@+id/hintTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titleText"
                    android:layout_alignParentBottom="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />

            </RelativeLayout>

            <TextView
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"

                android:paddingHorizontal="@dimen/dp_9"
                android:paddingVertical="@dimen/dp_5"

                android:textColor="@color/white"
                android:textSize="@dimen/dp_12"
                android:visibility="gone" />

            <View
                android:id="@+id/arrowsView"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/ic_arrows_black" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即管理"
                android:background="@drawable/view_red_round_10_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_7"
                android:paddingHorizontal="@dimen/dp_8"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                />-->
        </RelativeLayout>
    </com.liningkang.ui.view.ShadowViewCard>

</layout>