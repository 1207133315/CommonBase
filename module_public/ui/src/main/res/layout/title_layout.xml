<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainView"
    android:paddingBottom="@dimen/dp_12"
    android:background="@color/transparent">

    <com.liningkang.ui.view.BackView
        android:id="@+id/backView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_54"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.liningkang.ui.view.BoldTextView
        android:id="@+id/titleText"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_18"
        app:isBold="true"
        app:layout_constraintBottom_toBottomOf="@+id/backView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/backView" />

    <com.liningkang.ui.view.BoldTextView
        android:id="@+id/skipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_16"
        android:text="@string/skip"
        android:clickable="true"
        android:textColor="@color/_3d8aff"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@+id/titleText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleText" />
    <View
        android:id="@+id/skipRes"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/titleText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleText"/>


</androidx.constraintlayout.widget.ConstraintLayout>